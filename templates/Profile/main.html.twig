                <span class="icon-certificate nav-icon-fa-sm nav-text"></span> {{ profile['BAC'] }} <br>
                <span class="icon-medkit nav-icon-fa-sm nav-text"></span> {{ profile['PARENT_PHONE'] }}
              </div>
        </div>
